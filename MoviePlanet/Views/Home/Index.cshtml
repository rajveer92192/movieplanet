@{ ViewBag.Title = "Welcome | Movie Planet"; }

<style>
    .carousel-inner .item {
        height: 500px;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="/Content/DataTables/images/img1.jpg" alt="Los Angeles" style="width:100%;">
        </div>
        <div class="item">
            <img src="/Content/DataTables/images/img2.jpg" alt="Los Angeles" style="width:100%;">
        </div>
        <div class="item">
            <img src="/Content/DataTables/images/img3.jpg" alt="Los Angeles" style="width:100%;">
        </div>
        <div class="item">
            <img src="/Content/DataTables/images/img4.jpg" alt="Los Angeles" style="width:100%;">
        </div>
        <div class="item">
            <img src="/Content/DataTables/images/img5.jpg" alt="Los Angeles" style="width:100%;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row" style="text-align:center; margin-top:50px;">
    <div class="col-md-12">
        <h2>No Subscription charges</h2>
        <p>
            You choose where to purchase your favorite movies, bringing your collection together is free.
        </p>
    </div>
</div>

<div class="row" style="margin-top:50px;">
    <div class="col-md-6" style="top: 30px;">
        <h2>Personalize Your Collection</h2>
        <p>
            With My Lists, you can organize your movie collection in more ways than ever before. Your movies, your way.
        </p>
    </div>
    <div class="col-md-6">
        <img style="width:100%;" src="/Content/DataTables/images/collection.png" alt="collection" />
    </div>
</div>